<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Header" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="DetailsHeader" parent="Header">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
    <style name="DetailsValue" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DayTimeLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>
    <style name="DayTimeLayoutTextView" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="DayTimeLayoutTextViewValue" parent="DayTimeLayoutTextView">
        <item name="android:textColor">@color/design_default_color_secondary_variant</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LessonDetailsTime" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/design_default_color_secondary_variant</item>
    </style>
</resources>